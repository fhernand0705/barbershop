<h1>Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(@user) do |f| %>
    <%= f.text_field :first_name %>
    <%= f.text_field :last_name %>
    <%= f.email_field :email %>
    <%= f.password_field :password %>
    <%= f.submit 'Create' %>
  <% end %>
  </div>
</div>
