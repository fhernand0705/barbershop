<div class="main-container">
 <button class="openbar" onclick="openSidebar()">Book Appointment</button>
 <%= render 'appointments/new' %>

  <section>
    <%= month_calendar events: @appts do |date, appts| %>
      <%= date.day %>
      <% appts.each do |a| %>
       <div>
         <span>@<%= a.start_at.strftime("%H:%M") %></span>
         <span>| Barber: <%#= a.user.first_name.capitalize %></span>
       </div>
     <% end %>
    <% end %>
  </section>

  <div class="table-responsive-sm">
    <table class="table barbers">
      <caption class="barber-header">Barbers</caption>
      <% if current_user.has_any_role?(:admin, :barber) %>
      <caption class="add-barber">
        <%= link_to new_user_path do %>
          <i class="fas fa-plus-circle"></i>
        <% end %>
      </caption>
      <% end %>
      <thead>
        <tr>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
        </tr>
      </thead>
      <tbody>
        <!-- LOOP THRU SHOP TO LIST BARBER NAMES -->
        <tr>
          <td><%= @shop.users[0].first_name.capitalize %></td>
          <td><%= @shop.users[0].last_name.capitalize %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<%= render 'services/index' %>
