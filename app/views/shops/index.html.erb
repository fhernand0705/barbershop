<h1>Barbershops</h1>

<table class="table table-striped">
  <% if current_user.has_any_role?(:admin, :barber) %>
  <caption class="add-service">
    <%= link_to new_shop_path do %>
      <i class="fas fa-plus-circle"></i>
    <% end %>
  </caption>
  <% end %>
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Phone</th>
      <th scope="col">Hours</th>
      <th scope="col">Profile</th>
    </tr>
  </thead>
  <tbody>
    <% @shops.each do |s| %>
    <tr>
      <td><%= s.name.capitalize %></td>
      <td><%= s.address %></td>
      <td><%= s.phone %></td>
      <td><%= s.hours %></td>
      <% if logged_in? %>
      <td>
        <%= link_to shop_path(s.id) do %>
          <i class="fas fa-home"></i>
        <% end %>
      </td>
      <% else %>
        <td>Log in for access to barbershop profile</td>
      <% end %>
    <% end %>
    </tr>
  </tbody>
</table>
