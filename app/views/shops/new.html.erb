<h1>Register a Barbershop</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(@shop) do |f| %>

    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :address %><br>
    <%= f.text_field :address %><br>
    <%= f.label :phone %><br>
    <%= f.telephone_field :phone %><br>

    <%= f.submit 'Register', class: "btn btn-primary" %>
  <% end %>
  </div>
</div>
