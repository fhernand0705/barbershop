<% if current_user.has_any_role?(:barber) %>
<h1>Create Schedule</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(@schedule) do |f| %>

    <%= f.label :status %><br>
    <%= f.text_field :status %><br>
    <%= f.label :start_at %><br>
    <%= f.text_field :start_at, :class => "time_picker" %><br>
    <%= f.label :end_at %><br>
    <%= f.text_field :end_at, :class => "time_picker" %><br>
    <%= f.collection_select :user_id, User.all, :id, :full_name, {include_blank: true} %><br>

    <%= f.submit 'Submit', class: "btn btn-primary" %>
  <% end %>
  </div>
</div>
<% end %>

<script>
  $('.time_picker').timepicker({ 'scrollDefault': 'now' });
</script>
