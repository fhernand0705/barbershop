<h1>Login</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email %><br>
    <%= f.email_field :email %><br>
    <%= f.label :password %><br>
    <%= f.password_field :password %><br>

    <%= f.submit 'Submit', class: "btn btn-primary" %>
  <% end %>
  </div>
</div>
