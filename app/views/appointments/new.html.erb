<div class="wrapper">
  <h1>Book appointment</h1>
  <div class="row">
    <div class="col-md-6">
      <%= form_for(@appt) do |f| %>
      <%= f.label :Time %><br>
      <%= f.text_field :start_at, :class => "time_picker" %><br>
      <%= f.label :Barbershop %><br>
      <%= f.collection_select :shop_id, Shop.all, :id, :name, {include_blank: true} %><br>
      <%= f.label :Barber %><br>
      <%= f.collection_select :user_id, User.with_role(:barber), :id, :first_name, {include_blank: true} %><br>
      <%= f.label :Service %><br>
      <%= f.collection_select :service_id, Service.all, :id, :service_price, {include_blank: true} %><br>
      <%= f.label :note %><br>
      <%= f.text_area :note %><br>

      <%= f.submit 'Book', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<script>
  $('.time_picker').timepicker({ 'scrollDefault': 'now' });

</script>
